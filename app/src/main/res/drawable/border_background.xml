<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color -->
    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="4dp" />

            <solid android:color="@color/myColorContainerLight" />
        </shape>
    </item>

    <!-- Border -->
    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="4dp" />

            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@color/myColorLight" />
        </shape>
    </item>

</layer-list>