<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onMyColorLight"
    tools:context=".AddEditItemActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15" />

        <TextView
            android:id="@+id/itemTitleTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/myColorLight"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/guideline11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.79" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />


        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/button3"
            style="@style/FABStyleExtended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Delete Button"
            android:onClick="deleteOnClick"
            android:text="Delete"
            android:textColor="@color/onMyColorLight"
            app:icon="@drawable/baseline_delete_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline13"
            app:maxImageSize="30dp" />


        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/button4"
            style="@style/FABStyleExtended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Save Button"
            android:onClick="saveOnClick"
            android:text="Save"
            android:textColor="@color/onMyColorLight"
            app:icon="@drawable/baseline_save_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline14"
            app:layout_constraintTop_toTopOf="@+id/guideline13"
            app:maxImageSize="30dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/itemNameET"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:hint="Item name"
            app:boxStrokeColor="@color/myColorLight"
            app:endIconDrawable="@drawable/baseline_cancel_24"
            app:endIconMode="custom"
            app:endIconTint="@color/myColorLight"
            app:hintTextColor="@color/myColorLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline11"
            app:startIconTint="@color/myColorLight">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/amountET"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:hint="Amount"
            app:boxStrokeColor="@color/myColorLight"
            app:endIconDrawable="@drawable/baseline_cancel_24"
            app:endIconMode="custom"
            app:endIconTint="@color/myColorLight"
            app:hintTextColor="@color/myColorLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemNameET"
            app:startIconTint="@color/myColorLight">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/storeMenu"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:hint="Store"
            app:boxStrokeColor="@color/myColorLight"
            app:endIconTint="@color/myColorLight"
            app:hintTextColor="@color/myColorLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amountET">

            <AutoCompleteTextView
                android:id="@+id/storeDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                app:simpleItemSelectedColor="@color/onMyColorContainerLightMild"
                app:simpleItemSelectedRippleColor="@color/onMyColorContainerLightMild" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/noteET"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:hint="Note"
            app:boxStrokeColor="@color/myColorLight"
            app:endIconDrawable="@drawable/baseline_cancel_24"
            app:endIconMode="custom"
            app:endIconTint="@color/myColorLight"
            app:hintTextColor="@color/myColorLight"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/storeMenu"
            app:startIconDrawable="@drawable/baseline_edit_note_24"
            app:startIconTint="@color/myColorLight">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>