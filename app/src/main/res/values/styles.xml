<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Circular">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- Light Theme -->
    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:textColorPrimary">@color/lightText</item>
    </style>

    <!-- Dark Theme -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="android:textColorPrimary">@color/darkText</item>
    </style>

    <style name="FABStyleExtended" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="backgroundTint">@color/myColorLight</item>
        <item name="iconTint">@color/onMyColorLight</item>
    </style>

    <style name="FABStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/myColorLight</item>
        <item name="tint">@color/onMyColorLight</item>
    </style>
</resources>